{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules/**/*"
    ]
}
